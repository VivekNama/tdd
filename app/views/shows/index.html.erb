<h1>Shows List</h1>

<table>

  <thead>
    <tr>
      <th>Show Name</th>
      <th>Show Picture URL</th>
      <th>Action</th>
    </tr>
  </thead>

  <% @shows.each do |show| %>
    <tr>
      <td><%= show.name %></td>
      <td><%= show.picture %></td>
      <td><%= link_to 'Delete', show, :method => :delete %></td>
    </tr>
  <% end %>

</table>

<a href="/shows/new">New Show</a>
